{% extends "base.html.twig" %}

{% block metatitle %}
    Liste d'articles | Site trop cool
{% endblock metatitle %}


{% block main %}


    <h2>Liste d'articles</h2>

    <section class="articles-container">
        {% for article in articles %}

            <article class="article-container">
                <p>{{ article.title }}</p>
                <p>{{ article.content }}</p>
                <div class="image"><img src="{{ article.image }}"></div>



            </article>
            <ul id="liste">
                <li><a href="{{ path('article_show', {id: article.id}) }}">Voir l'article</a></li>
                <li><a href="{{ path('delete_article', {id: article.id}) }}"> Supprimer l'article </a></li>
                <li><a href="{{ path('update_article', {id: article.id}) }}"> Mettre Ã  jour l'article </a></li>
            </ul>



        {% endfor %}
    </section>



{% endblock main %}
